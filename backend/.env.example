# ===========================================
# OBSERVA FLORESTA - Examplo Configuracao Backend 
# ===========================================

# -----------------
# Application Mode
# -----------------
# Control which engine to use (true = Azure Agent, false = Direct Logic)
USE_AZURE_AGENT=false

# Use mock data during development (true = mock, false = real APIs)
MOCK_DATA=true

# Environment (development, staging, production)
ENVIRONMENT=development

# -----------------
# Azure AI Foundry (Only needed when USE_AZURE_AGENT=true)
# -----------------
# Get these from: https://ai.azure.com
# Tutorial: https://learn.microsoft.com/azure/ai-studio/

AZURE_AI_PROJECT_CONNECTION_STRING=
AZURE_AI_ENDPOINT=
AZURE_AI_API_KEY=
AZURE_AI_PROJECT_NAME=observa-floresta
AZURE_AI_DEPLOYMENT_NAME=gpt-4

# -----------------
# External APIs
# -----------------
# INPE TerraBrasilis API
INPE_API_BASE_URL=http://terrabrasilis.dpi.inpe.br/api/v1
INPE_API_KEY=

# IBGE API (usually no key needed)
IBGE_API_BASE_URL=https://servicodados.ibge.gov.br/api/v1

# MapBiomas API (optional)
MAPBIOMAS_API_KEY=

# -----------------
# Server Configuration
# -----------------
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------
# Cache Configuration
# -----------------
# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600
ENABLE_CACHE=true

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------
# Rate Limiting (optional)
# -----------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
