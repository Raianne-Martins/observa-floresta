# ===========================================
# OBSERVA FLORESTA - Examplo Configuracao Backend 
# ===========================================

# -----------------
# Modo da Aplicacao
# -----------------
# Controla qual engine usar (true = Azure Agent, false = Direct Logic)
USE_AZURE_AGENT=false

# Use dados mock para o desenvolvimento (true = mock, false = real APIs)
MOCK_DATA=true

# Ambiente (development, staging, production)
ENVIRONMENT=development

# -----------------
# Azure AI Foundry (Atualize somente quando USE_AZURE_AGENT=true)
# -----------------
# Get these from: https://ai.azure.com
# Tutorial: https://learn.microsoft.com/azure/ai-studio/

AZURE_OPENAI_ENDPOINT=https://SEU-RECURSO.openai.azure.com/
AZURE_OPENAI_API_KEY=sua_api_key_aqui
AZURE_OPENAI_DEPLOYMENT_NAME=nome-gpt4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Origins 
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------
# Configuração Cache
# -----------------
# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600
ENABLE_CACHE=true

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------
# Rate Limiting (optional)
# -----------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
